<div class="article-wrapper">
  <h2><%= @post[:title] %></h2>

  <% if @post[:rating] %>
    <p><strong>Rating:</strong>
      <% @post[:rating].to_i.times do  %>
        <i class="fas fa-star"></i>
      <% end %>
    </p>
  <% end %>

  <% if @post[:photo] %>
    <div class="post-photo">
      <img src="<%= @post[:photo]%>" style="width: 400px; height: 300px;">
    </div>
  <% end %>
  <p><%= @post[:content] %></p>
  <br>
  <p><strong>Comments:</strong></p>
  <div class=comments>
    <% @comments.each do |comment| %>
      <div class="comment-box">
        <li><strong>&#x3e;</strong> <%= comment %></li>
      </div>
    <% end %>
  </div>
</div>

<a href="/" class="button"><i class="fas fa-arrow-left"></i> Back To Homepage</a>

